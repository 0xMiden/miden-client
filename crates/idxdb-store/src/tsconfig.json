{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "incremental": true,
    "sourceMap": false,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./js",
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["./ts/**/*.ts", "./ts/**/*.d.ts"],
  "exclude": ["./js/**/*"]
}
