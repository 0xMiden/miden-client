{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "incremental": true,
    "sourceMap": false,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./js",
    "strict": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["./ts/*.ts"],
  "exclude": ["./js/**/*", "./ts/*.test.ts"]
}
