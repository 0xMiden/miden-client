{
  "compilerOptions": {
    "checkJs": false,
    "incremental": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "../js",
    "strict": true
  },
  "include": ["./*.ts", "./*.d.ts", "./eslint.config.mjs"],
  "exclude": ["../js"]
}
