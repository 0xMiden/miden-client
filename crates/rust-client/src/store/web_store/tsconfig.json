{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "incremental": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./js",
    "strict": true
  },
  "include": ["./ts/*.ts", "./ts/*.d.ts"],
  "exclude": ["./js"]
}
